{
  "manifest_version": 3,
  "name": "GreenVerse Extension",
  "version": "1.0.0",
  "description": "Oneâ€‘click sustainable shopping helper on Amazon.in",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://www.amazon.in/*"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.amazon.in/*/dp/*"],
      "js": ["content/product.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.amazon.in/*/gp/cart/*"],
      "js": ["content/cart.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "frontend/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "192": "icons/icon192.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "192": "icons/icon192.png"
  }
}
